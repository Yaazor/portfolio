---
let {size, color, extra} = Astro.props;
const Element = `h${size}`;

---
<Element class:list={['heading', {extra: extra}]} style={{color: `var(${color})`}}>
    <slot/>
</Element>

<style lang="scss">
    @use '/src/styles/base/rules.scss';
    @use '/src/styles/base/fonts.scss';
    @use '/src/styles/base/proportions.scss';

    .heading {
        margin-bottom: 0;
    }

    h1 {
        font-size: proportions.$font-size-h1;
        &.extra {
            font-size: calc(proportions.$font-size-h1 * proportions.$font-scale);
        }
    }

    h2.extra {
        font-size: proportions.$font-size-h1;
    }

    h1, h2 {
        font-family: fonts.$display;
    }
</style>